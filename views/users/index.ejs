<section>

<header>
  <h2> Usuarios </h2>
</header>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Administrador</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% for (var i in users) { %>
      <tr>
        <td> <%= users[i].username %>  </td>

        <td> <%= users[i].isAdmin ? "Si" : "No" %> </td>

        <td>
          <a href="/users/<%= users[i].id %>" > Ver </a>
          <% if (session.user) { %>
            <% if (session.user.isAdmin || session.user.id === users[i].id) { %>
              <a href="/users/<%= users[i].id %>/edit"><button>editar</button></a>
            <% } %>
            <% if (session.user.isAdmin && session.user.id !== users[i].id) { %>
              <a href="/users/<%= users[i].id %>?_method=DELETE" 
                 onClick="return confirm('Borrar cuenta: <%= users[i].username %>');">
                 <button>borrar</button> 
              </a> 
            <% } %>
          <% } %>
         </td>
      </tr>
    <%  }; %>
  </tbody>
</table>

<footer>
  <nav> 
      <% if (session.user) { %>
        <a href="/users/new" ><button type="button">Crear nuevo Usuario</button></a> 
      <% } %>
      
  </nav>
</footer>
<section>
